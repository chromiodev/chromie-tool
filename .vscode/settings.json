{
  "editor.tabSize": 2,

  "[markdown]": {
    "files.insertFinalNewline": true,
    "editor.formatOnSave": false
  },

  "[json]": {
    "files.insertFinalNewline": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.quickSuggestions": {
      "strings": true
    },
  },

  "[python]": {
    "files.insertFinalNewline": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  "[yaml]": {
    "files.insertFinalNewline": true,
  },

  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  "ruff.nativeServer": "on",
  "ruff.configuration": ".ruff.toml",

  "cSpell.language": "en,es",
  "cSpell.customDictionaries": {
    "custom-dictionary-workspace": {
      "name": "custom-dictionary-workspace",
      "path": "${workspaceFolder}/.vscode/cspell/custom-dictionary-workspace.txt",
      "addWords": true,
      "scope": "workspace"
    }
  },

  "geminicodeassist.enable": true,
  "geminicodeassist.enableTelemetry": false,
  "geminicodeassist.contextExclusionFile": ".aiexclude",
  "geminicodeassist.contextExclusionGitignore": true,
  "geminicodeassist.inlineSuggestions.enableAuto": false,
  "geminicodeassist.inlineSuggestions.suggestionSpeed": "Slow",
}
